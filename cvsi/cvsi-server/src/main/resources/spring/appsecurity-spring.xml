<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
             xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
                    http://www.springframework.org/schema/security
                    http://www.springframework.org/schema/security/spring-security-4.1.xsd">

    <http auto-config="true" >
        <intercept-url pattern="/user/**" access="ROLE_USER" />
        <intercept-url pattern="/admin/**" access="ROLE_ADMIN" />
        <http-basic  />
        <csrf disabled="true"/>
    </http>

    <beans:bean id="customUserDetailsService" class="com.winify.cvsi.server.security.CustomUserDetailsService" />
    <!--<beans:bean class="org.springframework.security.authentication.AuthenticationProvider" abstract="true"/>-->

    <!--<authentication-manager>-->
    <!--<authentication-provider user-service-ref="cvsiUserDetailsService"/>-->

    <!--</authentication-manager>-->

    <!--<beans:bean class="com.winify.cvsi.core.service.UserService"/>-->



    <authentication-manager >
        <authentication-provider ref="customAuthenticationProvider"/>
    </authentication-manager>
    <beans:bean id="customAuthenticationProvider" class="com.winify.cvsi.server.security.CustomAuthenticationProvider">
        <beans:property name="userService" ref="customUserDetailsService" />
    </beans:bean>
</beans:beans>